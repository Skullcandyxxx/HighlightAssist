{
  "manifest_version": 3,
  "name": "Highlight Assist - Visual UI Debugger",
  "short_name": "Highlight Assist",
  "version": "2.0.0",
  "description": "Professional UI debugging tool with localhost management, AI integration, and visual element inspection. Auto-detect dev servers, manage connections, debug faster.",
  "key": "",
  "author": "Skullcandyxxx",
  "homepage_url": "https://github.com/Skullcandyxxx/HighlightAssist",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage",
    "nativeMessaging"
  ],
  "host_permissions": [
    "http://localhost/*",
    "http://127.0.0.1/*",
    "http://*.local/*"
  ],
  "action": {
    "default_popup": "popup-v2.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Toggle Highlight Assist"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://localhost/*", "http://127.0.0.1/*", "http://*.local/*"],
      "js": ["logger.js", "error-handler.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "injected.js",
        "overlay-gui-oop.js",
        "logger.js",
        "error-handler.js",
        "modules/*.js"
      ],
      "matches": ["http://localhost/*", "http://127.0.0.1/*", "http://*.local/*"]
    }
  ],
  "commands": {
    "toggle-highlight": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "Command+Shift+H"
      },
      "description": "Toggle Highlight Assist overlay"
    }
  },
  "minimum_chrome_version": "88"
}
